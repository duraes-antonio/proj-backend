{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "prestart": "yarn run build",

    "dev": "NODE_ENV=dev nodemon src/server.ts --ignore tests",
    "prod": "NODE_ENV=prod node dist/src/server.js",
    "start": "NODE_ENV=prod node dist/src/server.js",
    "test": "NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test-dev": "NODE_ENV=test-dev jest --coverage --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.5.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.8.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/jest": "^25.1.3",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/mongodb": "^3.3.16",
    "@types/mongoose": "^5.7.2",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "eslint": "^5.15.3",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^25.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "sucrase": "^3.10.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7"
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-reporter.xml",
    "indent": 4,
    "env": {
      "test": {
        "reportPath": "reports-test"
      }
    }
  }
}
