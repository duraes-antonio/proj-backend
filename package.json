{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev": "NODE_ENV=dev nodemon src/server.ts --ignore tests",
    "prod": "NODE_ENV=prod node dist/server.js",
    "start": "NODE_ENV=prod node dist/server.js",
    "test": "NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test_dev": "NODE_ENV=test_dev jest --coverage --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.2",
    "@sendgrid/mail": "^7.1.0",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.21.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^9.0.0",
    "lodash.pickby": "^4.6.0",
    "moment": "^2.25.3",
    "mongoose": "^5.9.2",
    "multer": "^1.4.2",
    "node-correios": "^3.0.2",
    "query-string": "^6.12.1",
    "run-rs": "^0.6.2",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.8.3",
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^25.1.3",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/lodash.pickby": "^4.6.6",
    "@types/mongodb": "^3.3.16",
    "@types/mongoose": "^5.7.2",
    "@types/multer": "^1.4.3",
    "@types/query-string": "^6.3.0",
    "@types/supertest": "^2.0.8",
    "@types/xml2js": "^0.4.5",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "sucrase": "^3.10.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.7"
  },
  "jest": {
    "modulePaths": [
      "<rootDir>"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-reporter.xml",
    "indent": 4,
    "env": {
      "test": {
        "reportPath": "reports-test"
      }
    }
  }
}
